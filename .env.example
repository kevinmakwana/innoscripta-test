# Application Configuration
APP_NAME=InnoscriptaTest
APP_ENV=local  # Options: local, production, testing
APP_KEY=  # Generate with: php artisan key:generate
APP_DEBUG=true  # Set to false in production
APP_URL=http://localhost:8000

# Logging
LOG_CHANNEL=stack  # Options: single, daily, slack, etc.

# For MySQL:
DB_CONNECTION=mysql
DB_HOST=mysql
DB_PORT=3306
DB_DATABASE=innoscripta
DB_USERNAME=innoscripta
DB_PASSWORD=your_secure_password

# Cache & Queue
CACHE_DRIVER=file  # Options: file, redis, memcached
QUEUE_CONNECTION=sync  # Options: sync, redis, database

# External API Keys (Required for adapters)
# Obtain from respective services and keep secret
NEWSAPI_KEY=your_newsapi_key_here
GUARDIAN_KEY=your_guardian_key_here
NYT_KEY=your_nyt_key_here

# Messaging Broker (Pluggable: redis or rabbitmq)
MESSAGING_DRIVER=redis
# Redis config (if using redis)
REDIS_HOST=127.0.0.1
REDIS_PASSWORD=null
REDIS_PORT=6379
# RabbitMQ config (if using rabbitmq)
RABBITMQ_HOST=127.0.0.1
RABBITMQ_PORT=5672
RABBITMQ_USER=guest
RABBITMQ_PASSWORD=guest
RABBITMQ_EXCHANGE=default_exchange

# Mail (For notifications, if enabled)
MAIL_MAILER=smtp
MAIL_HOST=mailhog  # Use mailhog for local dev
MAIL_PORT=1025
MAIL_USERNAME=
MAIL_PASSWORD=
MAIL_ENCRYPTION=null
MAIL_FROM_ADDRESS="hello@example.com"
MAIL_FROM_NAME="${APP_NAME}"

